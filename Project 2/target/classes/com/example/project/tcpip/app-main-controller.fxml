<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.Double?>
<?import javafx.scene.paint.Color?>
<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.tcpip.AppMainController">

    <!-- Top Section -->

    <!-- Center Section -->
    <center>
        <VBox>
            <padding>
                <Insets topRightBottomLeft="50.0" />
            </padding>
            <HBox alignment="CENTER">
                <spacing>100.0</spacing>
                <!-- Red LED -->
                <VBox alignment="CENTER">
                    <Circle fx:id="red_led" fill="grey" radius="35.0" stroke="black" />
                    <Label alignment="CENTER" text="Red Light" />
                    <spacing>10.0</spacing>
                </VBox>
                <!-- Blue LED -->
                <VBox alignment="CENTER">
                    <Circle fx:id="yellow_led" fill="gray" radius="35.0" stroke="black" />
                    <Label alignment="CENTER" text="Yellow Light" />
                    <spacing>10.0</spacing>
                </VBox>
                <VBox alignment="CENTER">
                    <Circle fx:id="green_led" fill="grey" radius="35.0" stroke="black" />
                    <Label alignment="CENTER" text="Green Light" />
                    <spacing>10.0</spacing>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>